// *号的样式
.key-icon
  position :relative
  &:after
    content: '*'
    position :absolute
    top:1px
    left :-7px
    font-family: $font-family-regular
    font-size: 14px
    color: #D32F2F
// input的公共样式
input
  height: 24px
  width :100%
  color: #27273E
  &::-webkit-input-placeholder
    color: $color-CCCCCC
  &::-ms-input-placeholder
    color: $color-CCCCCC
  &::-moz-placeholder
    color: $color-CCCCCC
// 门槛金额的样式
.middle-set
  display :flex
  align-items :center
  .p
    font-family: $font-family-light
    font-size: 12px
    color: #27273E
  .input-style
    margin :0 6px
    height :28px
    width :56px
    border: 1px solid #E6E6E6
    border-radius: 2px
    line-height :@height
    text-align :center
    & > input
      text-align :center
// 不能编辑的样式
.select-placeholder
  font-family: $font-family-light !important
  font-size: 14px !important
  color: #9B9B9B !important
